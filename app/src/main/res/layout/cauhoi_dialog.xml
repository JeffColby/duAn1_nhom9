<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/_20sdp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm câu hỏi"
        android:textSize="@dimen/_25ssp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:id="@+id/cauHoi_tvTieuDe"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:hint="Nhập nội dung câu hỏi"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:id="@+id/cauHoi_edNoiDung"
        android:textColorHint="@color/black"
        android:layout_marginTop="@dimen/_20sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn phân loại:"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:id="@+id/cauHoiDialog_tvPhanLoai"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/cauHoiDialog_spPhanLoai"
            android:layout_toEndOf="@id/cauHoiDialog_tvPhanLoai"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn bộ câu hỏi:"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:id="@+id/cauHoiDialog_tvBoCauHoi"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/cauHoiDialog_spBoCauHoi"
            android:layout_toEndOf="@id/cauHoiDialog_tvBoCauHoi"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:backgroundTint="@color/pink"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:id="@+id/cauHoi_btnDongY"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:backgroundTint="@color/hardBlue"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:id="@+id/cauHoi_btnTuChoi"
            android:layout_marginStart="@dimen/_10sdp"/>
    </LinearLayout>

</LinearLayout>