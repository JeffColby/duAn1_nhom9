<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="@dimen/_20sdp"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.GamePlayScreen_3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_17ssp"
        android:layout_margin="@dimen/_15sdp"
        android:textColor="@color/hardBlue"
        android:id="@+id/gamePlayScreen_3_tvTenNguoiChoi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/hardBlue"
        android:textStyle="bold"
        android:layout_below="@id/gamePlayScreen_3_tvTenNguoiChoi"
        android:layout_above="@id/gamePlayScreen_3_btnHoanThanh"
        android:id="@+id/gamePlayScreen_3_tvNoiDungCauHoi"/>

    <Button
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="Hoàn thành"
        android:backgroundTint="@color/pink"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:id="@+id/gamePlayScreen_3_btnHoanThanh"/>

    <Button
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="Trùng câu hỏi"
        android:backgroundTint="@color/lightBlue"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:id="@+id/gamePlayScreen_3_btnTrungCauHoi"
        android:layout_below="@id/gamePlayScreen_3_btnHoanThanh"/>

    <Button
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="Chịu thua"
        android:backgroundTint="@color/hardBlue"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:id="@+id/gamePlayScreen_3_btnChiuThua"
        android:layout_below="@id/gamePlayScreen_3_btnTrungCauHoi"/>
</RelativeLayout>