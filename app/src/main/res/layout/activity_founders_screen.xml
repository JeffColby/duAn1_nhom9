<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/orange"
    android:paddingTop="@dimen/_20sdp"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.FoundersScreen">

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/back_svgrepo_com"
        android:id="@+id/foundersScreen_btnTroVe"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:id="@+id/foundersScreen_tvNoiDung"
                android:textColor="@color/hardBlue"
                android:textStyle="bold"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/RoundedCornerImageView"
                android:src="@drawable/founder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Kết nối với Nguyễn Trung Thành tại đây"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:textAlignment="center"
                android:id="@+id/foundersScreen_btnFacebook"
                android:layout_margin="@dimen/_20sdp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>