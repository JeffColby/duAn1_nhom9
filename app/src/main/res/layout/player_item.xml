<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_20sdp"
    android:background="@drawable/corner_radius_player">

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/trash_solid"
        android:layout_alignParentEnd="true"
        android:id="@+id/player_btnDelete"/>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/pen_solid"
        android:layout_toStartOf="@id/player_btnDelete"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/player_btnEdit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:layout_toStartOf="@id/player_btnEdit"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/player_tvPlayerName"
        android:layout_centerVertical="true"/>
</RelativeLayout>