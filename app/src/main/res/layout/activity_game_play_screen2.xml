<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="@dimen/_20sdp"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.GamePlayScreen_2">

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/xmark_solid"
        android:id="@+id/gamePlayScreen_2_btnThoat"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/yLine"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/hardBlue"
            android:text="Thắng Lê"
            android:id="@+id/gamePlayScreen_2_tvTenNguoiChoi"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_50sdp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Sự thật"
            android:backgroundTint="@color/pink"
            android:id="@+id/gamePlayScreen_2_btnSuThat"
            android:layout_below="@id/gamePlayScreen_2_tvTenNguoiChoi"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:layout_toStartOf="@id/yLine"
            android:layout_marginEnd="@dimen/_10sdp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Thách thức"
            android:backgroundTint="@color/lightBlue"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:id="@+id/gamePlayScreen_2_btnThachThuc"
            android:layout_below="@id/gamePlayScreen_2_tvTenNguoiChoi"
            android:layout_toEndOf="@id/yLine"
            android:layout_marginStart="@dimen/_10sdp" />
    </RelativeLayout>

</RelativeLayout>